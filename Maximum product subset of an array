#include<bits/stdc++.h>
using namespace std;

int maxProduct(int a[],int n){
    if(n == 0) return a[0];

    int neg=0,zero=0,max_neg=INT_MIN;

    int prod =1;
    for(int i=0;i<n;i++){
        if(a[i] == 0) {
            zero ++;
            continue;
        }
        else if(a[i] < 0){
             neg++;
             max_neg = max(a[i],max_neg);
        }
        prod = prod * a[i];
    }

    if(zero == n) return 0;

    if(neg & 1){
        if(neg == 1 && zero > 0 && zero + neg == n){
            return 0;
        }
        prod = prod / max_neg;
    }


    return prod;
    
}

int main(){
    int n;cin>>n;
    int a[n];
    for(int i=0;i<n;i++){
        cin>>a[i];
    }

    cout<<maxProduct(a,n);

    return 0;
}
