#include<bits/stdc++.h>
using namespace std;
#define ll long long int 
int main(){

    ll n;cin>>n;

    while(true){
        ll a[n];
        for(ll i=0;i<n;i++) cin>>a[i];

        vector<pair<ll,ll>> buy;
        vector<pair<ll,ll>> sell;

        for(ll i=0;i<n;i++){
            if(a[i]>0) buy.push_back({a[i],i});
            else sell.push_back({a[i],i});
        }    

        ll ans =0;
        ll i=0,j=0;

        while(i< buy.size() && j < sell.size()){
            ll x = min(buy[i].first,-sell[j].first);
            buy[i].first -= x;
            sell[j].first += x;
            ll diff = abs(buy[i].second - sell[j].second);
            ans += (x*diff);
            // cout<<"Ans"<<ans<<endl;
            if(buy[i].first == 0) i++;
            if(sell[j].first == 0) j++;
        }
        cout<<ans<<endl;
        cin>>n;
        if(n == 0) break;
    }
    return 0;
}
