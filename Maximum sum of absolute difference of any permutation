#include<bits/stdc++.h>
using namespace std;

int maxSumDiffrence(int a[],int n){

    vector<int> final;

    sort(a,a+n);

    for(int i=0;i<n/2;i++){
        final.push_back(a[i]);
        final.push_back(a[n-i-1]);
    }

    if(n%2 != 0){
        final.push_back(a[n/2]);
    }

    int sum = 0;

    for(int i=0;i<n-1;i++){
        sum += abs(final[i]-final[i+1]);
    }

    sum += abs(final[0] - final[n-1]);

    return sum;
}

int main(){
    int a[] = {1,2,4,8};
    int n = sizeof(a) / sizeof(a[0]);

    cout<<maxSumDiffrence(a, n)<<endl;

}
